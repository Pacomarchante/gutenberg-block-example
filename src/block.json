{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "create-block/richtext",
	"version": "0.1.0",
	"title": "RichText",
	"category": "text",
	"icon": "flag",
	"description": "A Gutenberg block to show your pride! This block enables you to type text and style it with the color font Gilbert from Type with Pride.",
	"attributes": {
		"content": {
			"type": "string",
			"source": "text"
		},
		"isChecked": {
			"type": "boolean",
			"default": true
		}
	},

	"supports": {
		"color": {
			"text": true,
			"background": true,
			"link": true
		},
		"anchor": true,
		"align": true,
		"spacing": {
			"padding": true,
			"margin": true,
			"blockGap": true
		},
		"typography": {
			"fontSize": true,
			"lineHeight": true,
			"fontStyle": true,
			"fontWeight": true,
			"textDecoration": true,
			"textTransform": true
		}
	},
	"textdomain": "customblock",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css"
}
